{
    "compilerOptions": {
      "target": "es2020", 
      "module": "esnext", 
      "moduleResolution": "node", 
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true, 
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "sourceMap": true,
      "resolveJsonModule": true,
      "isolatedModules": true, 
      "allowJs": true, 
      "lib": ["es2020", "dom", "esnext.asynciterable"] 
    },
    "include": ["src/**/*"]
  }